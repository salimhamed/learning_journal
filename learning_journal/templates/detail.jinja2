{% extends "layout.jinja2" %}
{% block body %}
<article>
  <h1>{{entry.title}}</h1>
  <hr/>
  <p>{{entry.body}}</p>
  <hr/>
  <p>Created <strong title="{{entry.created}}">{{entry.created}}</strong></p>
  <p>Modified <strong title="{{entry.edited}}">{{entry.edited}}</strong></p>
</article>
<p><a class="button" href="{{request.route_url('action', action='update', _query={'id': entry.id})}}">Update Entry</a></p>
<p><a class="button" href="{{request.route_url('home')}}">Go Back</a></p>
{% endblock %}
